<main class="container" style="background-color:aliceblue; margin-top:120px;">
  <div>
    <h1 style="color:blue; text-align:center;">Product</h1>
  </div>
  <div class="row" style="border:solid 1px black; margin:50px; text-align:left; ">
		<div class="col-xs-4">
		  <img style="height:8em; width:8em; margin:20px 20px;" src="/images/product.png">
		</div>
		<div class="col-xs-4" style="margin:30px 40px; font-size:14px;">
		 	<span><b>Name:&nbsp;</b>{{product.name}}</span><br><br>
		  <span><b>Category:&nbsp;</b>{{product.Category.name}}</span><br><br>
		  <span><b>Price:&nbsp;</b>${{product.price}}</span>
		</div>
		<div class="col-xs-4" style="margin:30px 40px; font-size:14px;">
			<span><b>Description:&nbsp;</b>{{product.description}}</span><br>
		 	<button type="submit" class="btn btn-primary" style="margin-top:30px">Add to Cart</button>
		</div>
	  <!--
	  {{#if product.inCart }}
	    <form method="get" action="/cart">
	      <input type="hidden"></input>
	      <button style="margin-bottom:100px; color:red;" type="submit" class="btn btn-warning"><strong>Edit in Cart</strong></button>
	    </form>
	  {{else}}
	    <form method="post" action="/cart/add">
	      <input type="hidden" value="{{product.id}}" name="itemId"></input>
	      <input type="hidden" value="true" name="addedFromShow"></input>
	      <button style="margin-bottom:100px;" type="submit" class="btn btn-primary">Add to Cart</button>
	    </form>
	  {{/if}}
	  -->
	</div>
	<hr>
	<h2 style="color: blue; text-align: center">Related Products</h2>
	<div class="row">
    {{#if relatedProducts}}
	    {{#each relatedProducts as |product|}}
	      <div class="col-xs-4" style="height:320px; width:250px; border:solid 1px black; margin:10px 13px;  text-align: center; ">
	        <img src="/images/product.png" style="height:8em; width:8em; margin-top:18px; padding:10px;"/>
	        <br>
	        <div style="margin-top:1em; font-size:14px; text-align:center">
	        	<p>${{product.price}}</p>
	        	<p>{{product.name}}</p>
	        	<p>Category: {{product.Category.name}}</p>
	        	<a href="#"><button class="btn btn-default btn-primary">Add to Cart</button></a>
	        </div>
	        <!--
		      {{#if prod.inCart }}
		        <form method="get" action="/cart">
		          <input type="hidden"></input>
		          <button style="color: red" type="submit" class="btn btn-warning"><strong>Edit in Cart</strong></button>
		        </form>
		      {{else}}
		        <form method="post" action="/cart/add">
		          <input type="hidden" value="{{prod.id}}" name="itemId"></input>
		          <input type="hidden" value="true" name="addedFromShow"></input>
		          <input type="hidden" value="{{../product.id}}" name="currentShowPageId"></input>
		          <button type="submit" class="btn btn-primary">Add to Cart</button>
		        </form>
		      {{/if}}
		      -->
	      </div>
	    {{/each}}
    {{else}}
    	<h3>No Related Products</h3>
    {{/if}}
	</div>
</div>